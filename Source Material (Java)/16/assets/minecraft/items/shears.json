{
  "model": {
    "type": "minecraft:condition",
    "property": "minecraft:has_component",
    "component": "minecraft:enchantments",
    "ignore_default": true,

    "on_true": {
      "type": "minecraft:condition",
      "property": "minecraft:keybind_down",
      "keybind": "key.use",
      "on_true": {
        "type": "minecraft:select",
        "property": "minecraft:display_context",
        "cases": [
          {
            "when": ["gui", "ground", "fixed"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears" }
          },
          {
            "when": ["firstperson_lefthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_first_left_use" }
          },
          {
            "when": ["firstperson_righthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_first_right_use" }
          }
        ],
        "fallback": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_third_use" }
      },
      "on_false": {
        "type": "minecraft:select",
        "property": "minecraft:display_context",
        "cases": [
          {
            "when": ["gui", "ground", "fixed"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears" }
          },
          {
            "when": ["firstperson_lefthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_first_left" }
          },
          {
            "when": ["firstperson_righthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_first_right" }
          }
        ],
        "fallback": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_enchanted_third" }
      }
    },

    "on_false": {
      "type": "minecraft:condition",
      "property": "minecraft:keybind_down",
      "keybind": "key.use",
      "on_true": {
        "type": "minecraft:select",
        "property": "minecraft:display_context",
        "cases": [
          {
            "when": ["gui", "ground", "fixed"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears" }
          },
          {
            "when": ["firstperson_lefthand", "firstperson_righthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_use" }
          }
        ],
        "fallback": { "type": "minecraft:model", "model": "minecraft:item/shears_hand_use" }
      },
      "on_false": {
        "type": "minecraft:select",
        "property": "minecraft:display_context",
        "cases": [
          {
            "when": ["gui", "ground", "fixed"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears" }
          },
          {
            "when": ["firstperson_lefthand", "firstperson_righthand"],
            "model": { "type": "minecraft:model", "model": "minecraft:item/shears_hand" }
          }
        ],
        "fallback": { "type": "minecraft:model", "model": "minecraft:item/shears_hand" }
      }
    }
  }
}
