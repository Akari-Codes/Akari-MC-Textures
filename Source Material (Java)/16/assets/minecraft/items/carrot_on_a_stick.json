{
  "model": {
    "type": "minecraft:condition",
    "property": "minecraft:has_component",
    "component": "minecraft:enchantments",
    "ignore_default": true,
    "on_true": {
      "type": "minecraft:select",
      "property": "minecraft:display_context",
      "cases": [
        {
          "when": [
            "firstperson_righthand"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "item/enchanted_carrot_on_a_stick_hand_first_right"
          }
        },
        {
          "when": [
            "firstperson_lefthand"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "item/enchanted_carrot_on_a_stick_hand_first_left"
          }
        },
        {
          "when": [
            "gui",
            "ground",
            "fixed"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/carrot_on_a_stick"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "item/enchanted_carrot_on_a_stick_hand"
      }
    },
    "on_false": {
      "type": "minecraft:select",
      "property": "minecraft:display_context",
      "cases": [
        {
          "when": [
            "firstperson_righthand"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "item/carrot_on_a_stick_hand_right"
          }
        },
        {
          "when": [
            "firstperson_lefthand"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "item/carrot_on_a_stick_hand_left"
          }
        },
        {
          "when": [
            "gui",
            "ground",
            "fixed"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/carrot_on_a_stick"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "item/carrot_on_a_stick_hand"
      }
    }
  }
}