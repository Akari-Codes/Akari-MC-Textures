{
  "model": {
    "type": "minecraft:condition",
    "property": "minecraft:has_component",
    "component": "minecraft:enchantments",
    "ignore_default": true,
    "on_true": {
      "type": "minecraft:select",
      "property": "minecraft:display_context",
      "cases": [
        {
          "when": [
            "firstperson_lefthand",
            "firstperson_righthand"
          ],
          "model": {
            "type": "minecraft:condition",
            "property": "minecraft:keybind_down",
            "keybind": "key.use",
            "on_true": {
              "type": "minecraft:model",
              "model": "item/enchanted_flint_and_steel_hand_use_right"
            },
            "on_false": {
              "type": "minecraft:model",
              "model": "item/enchanted_flint_and_steel_hand_first_right"
            }
          }
        },
        {
          "when": [
            "gui",
            "ground",
            "fixed"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/flint_and_steel"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:condition",
        "property": "minecraft:keybind_down",
        "keybind": "key.use",
        "on_true": {
          "type": "minecraft:model",
          "model": "item/enchanted_flint_and_steel_hand_use"
        },
        "on_false": {
          "type": "minecraft:model",
          "model": "item/enchanted_flint_and_steel_hand"
        }
      }
    },
    "on_false": {
      "type": "minecraft:select",
      "property": "minecraft:display_context",
      "cases": [
        {
          "when": [
            "gui",
            "ground",
            "fixed"
          ],
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/flint_and_steel"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:condition",
        "property": "minecraft:keybind_down",
        "keybind": "key.use",
        "on_true": {
          "type": "minecraft:model",
          "model": "item/flint_and_steel_hand_use"
        },
        "on_false": {
          "type": "minecraft:model",
          "model": "item/flint_and_steel_hand"
        }
      }
    }
  }
}